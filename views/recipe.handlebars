<!--when people select a specific recipe to look at-->
<div class="content">
  <div>
    <h2>{{name}}</h2>
  </div>
  <div>
    <p>{{instructions}}</p>
    <p>{{ingredients}}</p>
    <p>Created by {{user.name}}</p>

    <div>
      <div class="field">
        <label class="label">Leave a comment:</label>
        <div class="control">
          <textarea class="textarea" placeholder="Leave a comment"></textarea>
        </div>
        <div class="control">
          <button class="button is-link">Submit</button>
        </div>
        <label class="checkbox">
          <input type="checkbox">
          Upvote recipe
        </label>
      </div>
    </div>
    {{#each comments as |comment| }}
    <div class="content">
      <h2><a href='/recipe/{{recipe.id}}'>{{name}}</a></h2>
      <p>{{text}}</p>
    </div>
    {{/each}}
  </div>
</div>

